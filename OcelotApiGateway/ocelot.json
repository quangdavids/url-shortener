{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Information",
      "Microsoft.Hosting.Lifetime": "Information",
      "Ocelot": "Debug"
    }
  },
  
  "Routes": [
    {
      "DownstreamPathTemplate": "/api/url/all",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5000
        }
      ],
      "UpstreamPathTemplate": "/api/url/all",
      "UpstreamHttpMethod": [ "GET" ],
      "RouteIsCaseSensitive": false
    },
    {
      "DownstreamPathTemplate": "/api/url/shorten",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5000
        }
      ],
      "UpstreamPathTemplate": "/api/url/shorten",
      "UpstreamHttpMethod": [ "POST" ],
      "RouteIsCaseSensitive": false
    },
    {
      "DownstreamPathTemplate": "/api/url/{urlCode}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5000
        }
      ],
      "UpstreamPathTemplate": "/api/url/{urlCode}",
      "UpstreamHttpMethod": [ "DELETE" ],
      "RouteIsCaseSensitive": false
    },
    {
      "DownstreamPathTemplate": "/api/url/analytics/{urlCode}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5000
        }
      ],
      "UpstreamPathTemplate": "/api/url/analytics/{urlCode}",
      "UpstreamHttpMethod": [ "GET" ],
      "RouteIsCaseSensitive": false
    },
    {
      "DownstreamPathTemplate": "/api/url/{code}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5000
        }
      ],
      "UpstreamPathTemplate": "/api/{code}",
      "UpstreamHttpMethod": [ "GET" ],
      "RouteIsCaseSensitive": false,
      "RequestIdKey": "X-Request-Id",
      "HttpHandlerOptions": {
        "AllowAutoRedirect": false
      }
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:4000",
    "RequestIdKey": "X-Request-Id",
    "RateLimitOptions": {
      "ClientWhitelist": [],
      "EnableRateLimiting": true,
      "Period": "1s",
      "PeriodTimespan": 1,
      "Limit": 10
    },
    "QoSOptions": {
      "ExceptionsAllowedBeforeBreaking": 3,
      "DurationOfBreak": 10000,
      "TimeoutValue": 30000  
    },
    "HttpHandlerOptions": {
      "AllowAutoRedirect": false,
      "UseCookieContainer": false,
      "UseTracing": false
    }
  }
}